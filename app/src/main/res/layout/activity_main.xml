<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/mini_player"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:padding="4dp"
            android:layout_gravity="bottom"
            android:visibility="visible"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:id="@+id/player_cover_art"
                android:contentDescription="@string/player_cover_art"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/player_story_title"
                android:layout_width="0px"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:layout_weight="1"
                android:ellipsize="end"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <ImageView
                android:contentDescription="@string/player_action_button"
                android:id="@+id/player_action_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                tools:ignore="RtlSymmetry"/>
        </LinearLayout>
    </FrameLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer"/>

</android.support.v4.widget.DrawerLayout>
