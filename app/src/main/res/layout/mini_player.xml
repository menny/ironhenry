<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mini_player"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:paddingTop="1dp"
    android:visibility="gone"
    tools:showIn="@layout/activity_main">

    <ProgressBar
        android:id="@+id/seek_bar_loading"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:indeterminate="true"
        android:visibility="gone"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    <FrameLayout
        android:id="@+id/seek_bar_layout"
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_height="8dp"
        android:layout_marginLeft="-4dp"
        android:visibility="gone"
        tools:ignore="RtlHardcoded">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9FFF"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/seek_bar_position_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/seek_bar_point"
            android:layout_gravity="center_vertical"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:weightSum="1">

        <ImageView
            android:id="@+id/player_cover_art"
            android:contentDescription="@string/player_cover_art"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/player_story_title"
            android:layout_width="0px"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

        <ImageView
            android:contentDescription="@string/player_action_button"
            android:id="@+id/player_action_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            tools:ignore="RtlSymmetry"/>
    </LinearLayout>

</FrameLayout>